<div class="row">
  <div class="col-xs-12 col-sm-4 login-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"login-field" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "off", class:"login-field" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"login-field" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class:"login-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"submit-button"%>
      </div>
    <% end %>
    <div class="close-account">
      <h1>Close your account</h1>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"submit-button" %></p>
    </div>
  </div>
  <div class="col-xs-12 col-sm-8 image-box">
    <div class="image">
      <%= image_tag("ride.png", class: "img-responsive image-ride")%>
      <div class="image-copyright">
        <a href="http://www.freepik.com/free-vector/cute-quote-with-a-bicycle_943071.htm">Designed by Freepik</a>
      </div>
    </div>
  </div>
</div>

<div class="button-back"><%= link_to 'Back', :back%></div>
