<div class="row">
  <div class="col-xs-12 col-sm-4 login-container">
    <h1>Sign up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"login-field" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters min.)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:"login-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"login-field" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"submit-button"%>
      </div>
    <% end %>

  </div>
  <div class="col-xs-12 col-sm-8 image-box">

    <%= render partial: "devise/ride-image"%>

  </div>
</div>
<div class="button-back"><%= link_to 'Back', :back%></div>