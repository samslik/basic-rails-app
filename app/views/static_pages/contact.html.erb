<div class="contact-wrapper">
  <%= flash[:notice] %>

  <%= form_tag("/static_pages/thank_you") do %>
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: "form-control", placeholder: "Your Name" %>
          </div>
          <div class="form-group">
            <%= label_tag :email, "Email Address" %>
            <%= text_field_tag :email, nil, class: "form-control", placeholder: "Your Email Address" %>
          </div>
          <div class="form-group">
            <%= label_tag :message %>
            <%= text_area_tag :message, nil, class: "form-control", placeholder: "Your Message" %>
          </div>
        </div>
      </div>
      <%= submit_tag "Send", class:"submit-button" %>
  <% end %>
</div>
<div class="button"><%= link_to 'Back', :back%></div>
