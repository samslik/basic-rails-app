<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@product.image_url, class: "show-product img-responsive") %>
</p>

<p>
  <strong>Title:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.color %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %> Euro
</p>

<div class="button"><%= link_to 'Edit', edit_product_path(@product) %></div>
<div class="button"><%= link_to 'Show all', products_path %></div>
