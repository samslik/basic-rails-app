<div class="wrapper-show">
  <p>
    <%= image_tag(@product.image_url, class: "show-product img-responsive") %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Color:</strong>
    <%= @product.color %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %> Euro
  </p>

  <div class="button"><%= link_to 'Edit', edit_product_path(@product) %></div>
  <div class="button"><%= link_to 'Show all', products_path %></div>

  <div class="row division">
    <div class="comment-box">
      <div class="col-xs-12 col-sm-6">
        <div class="highest_rating">
          <h2>Top positive review</h2>
          <p><%= @product.highest_rating_comment %></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="lowest_rating">
          <h2>Top critical review</h2>
          <p><%= @product.lowest_rating_comment %></p>
        </div>
      </div>
    </div> <!-- end comment-box -->
  </div> <!-- end row -->
</div> <!-- wrapper show -->
