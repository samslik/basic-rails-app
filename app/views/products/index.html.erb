<p id="notice"><%= notice %></p>

<div class="header"><h1>Choose the right one</h1></div>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product|%>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div class="product-container">
        <div class="polaroid">
          <div class="bike-photo">
          <%= image_tag(product.image_url, class: "img-responsive") %>
          </div>
        </div>
        <h2><%= product.name %></h2>
        <p class="color">Color: <%= product.color %></p>
        <p class="description"><%= product.description %></p>
        <p class="price"> <%= product.price %> Euro </p>
        <div class="button"><%= link_to 'Show', product %></div>
        <div class="button"><%= link_to 'Edit', edit_product_path(product) %></div>
        <div class="button"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div> <!-- end product-container -->
    </div> <!-- end col -->
    <% end %>
  </div>
</div>
<br>

<div class="button"><%= link_to 'New Product', new_product_path %></div>
